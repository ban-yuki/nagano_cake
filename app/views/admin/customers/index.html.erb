<%= render 'layouts/admin_header' %>

<div class="col-md-8 offset-md-1">
<h2>会員一覧</h2>
<table>
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>会員ステータス</th>
  </tr>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer.id) do %>
            <%= customer.full_name %>
          <% end %>
      </td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_active %>
          有効
        <% else %>
          退会済み
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
</div>