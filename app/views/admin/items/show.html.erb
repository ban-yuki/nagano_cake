<h2>商品詳細</h2>

<%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
  
  <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "300x300" %>
  <% else %>
    <%= image_tag 'no_image', size: "300x300" %>
  <% end %>
  
  <div>
    <p>商品名：<%= @item.name %></p>
    <p>商品説明：<%= @item.introduction %></p>
    <p>税抜価格：<%= @item.price %>円</p>
  
  <%= f.submit '編集する' %>

<% end %>