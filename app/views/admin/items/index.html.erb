<%= render 'layouts/admin_header' %>

<div class="container">
<h2>商品一覧</h2>

<%= link_to new_admin_item_path do %>
  <button type="button" class="btn-outline-dark btn-circle btn-lg">＋</button>
<% end %>
          
<table>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
          <% end %>
      </td>
      <td><%= item.price %></td>
    </tr>
  <% end %>
</table>
</div>