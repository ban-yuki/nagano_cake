<%= form_with model: @item, url: admin_items_path do |f| %>
<h2>商品一覧</h2>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to new_admin_item_path %></td>
        <td><%= link_to item.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
<% end %>