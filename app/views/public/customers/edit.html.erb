<h2><%= @customer.full_name %></th>さんの会員情報編集</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>

  <div class="row">
    <div class="col-2">
      <div class="field">
        会員ID
        <%= @customer.id %>
      </div>
    </div>
  </div>

 <div class="row">
    <div class="col-2">
      <div class="field">
        名前
        <%= f.label :（姓） %>
        <%= f.text_field :last_name %>
        <%= f.label :（名） %>
        <%= f.text_field :first_name %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <div class="field">
        フリガナ
        <%= f.label :（セイ） %>
        <%= f.text_field :last_name_kana %>
        <%= f.label :（メイ） %>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <div class="field">
        郵便番号
        <%= f.text_field :postal_code %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <div class="field">
        住所
        <%= f.text_field :address %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <div class="field">
        電話番号
        <%= f.text_field :telephone_number %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-2">
      <div class="field">
        メールアドレス
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  </div>
  
  <div class="form-group row">
  <%= f.label :is_active, '会員ステータス', class: 'col-sm-3 col-form-label' %>
  <div class="col-sm-9">
    <div class="custom-control custom-radio custom-control-inline">
      <%= f.radio_button :is_active, false, checked: @customer.is_active == false, class: 'custom-control-input', id: 'status-active' %>
      <%= f.label :is_active, '有効', class: 'custom-control-label', for: 'status-active' %>
    </div>
    <div class="custom-control custom-radio custom-control-inline">
      <%= f.radio_button :is_active, true, checked: @customer.is_active == true, class: 'custom-control-input', id: 'status-deleted' %>
      <%= f.label :is_active, '退会済み', class: 'custom-control-label', for: 'status-deleted' %>
    </div>
  </div>
</div>


  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>
