<%= render 'layouts/customer_header' %>

<h2>会員情報編集</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>

 <div class="row">
    <div class="col-2">
      <div class="field">
        氏名
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <div class="field">
        フリガナ
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <div class="field">
        郵便番号
        <%= f.text_field :postal_code %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <div class="field">
        住所
        <%= f.text_field :address %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <div class="field">
        電話番号
        <%= f.text_field :telephone_number %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <div class="field">
        メールアドレス
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  </div>
<% end %>

<div>
  <%= link_to customer_path do %>
    <button class="btn btn-sm btn-success">変更を保存</button>
  <% end %>
</div>

<div>
  <%= link_to current_customers_confirm_withdraw_path do %>
    <button class="btn btn-sm btn-success">退会する</button>
  <% end %>
</div>


