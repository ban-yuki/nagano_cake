<%= render 'layouts/customer_header' %>

<div class="container">

<h4>新規会員登録</h4>
 <div class="row">
 
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      <div class="row form-group">
        名前
        <%= f.label :（姓） %>
        <%= f.text_field :last_name %>
        <%= f.label :（名） %>
        <%= f.text_field :first_name %>
      </div>

      <div class="row form-group">
        フリガナ
        <%= f.label :（セイ） %>
        <%= f.text_field :last_name_kana %>
        <%= f.label :（メイ） %>
        <%= f.text_field :first_name_kana %>
      </div>

      <div class="row form-group">
        メールアドレス
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="row form-group">
        郵便番号（ハイフンなし）
        <%= f.text_field :postal_code %>
      </div>
      
      <div class="row form-group">
        住所
        <%= f.text_field :address %>
      </div>

      <div class="row form-group">
        電話番号（ハイフンなし）
        <%= f.text_field :telephone_number %>
      </div>

     <div class="row form-group">
        <%= f.label :パスワード（6文字以上） %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="row form-group">
        <%= f.label :パスワード（確認用） %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
    </div>
</div>

<div class="container">
<h7>既に登録済みの方は</h7><br>
  <%= render "public/shared/links" %>からログインしてください。 
</div>

