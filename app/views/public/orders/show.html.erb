<%= render 'layouts/customer_header' %>

<h2>注文履歴詳細</h2>

<h4>注文情報</h4>
  <table border="1" width="600">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>支払方法</th>
      </tr>
    </thead>
  </table>

<h4>請求情報</h4>
  <table border="1" width="600">
    <thead>
      <tr>
        <th>商品合計</th>
        <th>配送料</th>
        <th>ご請求額</th>
      </tr>
    </thead>
  </table>


<h4>注文内容</h4>
  <table border="1" width="600">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
  </table>

  <%= form_with(model: @cart_items, url: cart_items_path, local: true) do |f| %>
   
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.item.quantity %></td>
        <td><%= cart_item.subtotal %></td>
      </tr>
    <% end %>
  <% end %>
