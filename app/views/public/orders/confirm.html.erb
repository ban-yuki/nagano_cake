<h2>注文情報確認</h2>

<%= form_with(model: [@cart_items,  @order], url: orders_confirm_path, local: true) do |f| %>

<div class="row">
	<div class="col-xs-6">
		<table align="left" class="table table-bordered">
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
      <tbody>   
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.quantity %></td>
          <td><%= cart_item.subtotal %></td>
        </tr>
      <% end %> 
      </tbody>
    </table>
  </div>
	<div class="row">
		<div class="col-xs-4">
			<table class="table table-bordered">
			  <tr>
          <th>送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @total %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= @total + @order.postage %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>

<p><strong>支払方法 </strong><br><%= @order.payment_method_i18n %></p>　

<p><strong>お届け先 </strong><br>
<%= @order.postal_code %> <%= @order.address %> <%= @order.destination_name %></p>
  <%= form_with model: @order, method: :post, url: orders_path do |f| %>
		<%= f.hidden_field :payment_method ,:value => @order.payment_method %>
		<%= f.hidden_field :postage ,:value => @order.postage %>
		<%= f.hidden_field :address,:value => @order.address %>
		<%= f.hidden_field :postal_code,:value => @order.postal_code %>
		<%= f.hidden_field :destination_name,:value => @order.destination_name %>
		<%= f.hidden_field :total_payment ,:value => @total %><br><br>		
	<% end %>
  
  <div class="text-center">
  <%= form_with url: orders_confirm_path, method: :post, local: true do |f| %>
		<%= f.submit "購入を確定する", class: "btn btn-success text-cenrer btn-lg" %>
	<% end %>
	</div>
		
	<%= form_with model: @order, url: new_order_path,method: :get do |f| %>
    <%= f.hidden_field :order,:value => @order %>
    <%= f.submit '入力画面へ戻る' ,class: "btn btn-primary" %>
　<% end %>
