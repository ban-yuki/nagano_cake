<%= render 'layouts/customer_header' %>

<h2>注文履歴一覧</h2>

<%#= form_with(model: @order_details, url: orders_path, local: true) do |f| %>
  <table>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
    <tbody>
      <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= @customer.address %></td>
            <td>
              <% order.items.each do |item| %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= order.total_payment %></td>
            <td><%= link_to "注文詳細", order_path(order) %></td>
          </tr>
      <% end %>
    </tbody>
  </table>

<%# end %>