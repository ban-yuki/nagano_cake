<%= render 'layouts/customer_header' %>

<h4>ショッピングカート</h4>

<%= button_to 'カートを空にする', @cart_item, method: :delete_all, data: {confirm: 'カートを空にして本当によろしいですか？'}, class: 'fbtn' %>

  <table border="1" width="600">  
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
　　<tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td>
            <%= form_with model:@cart_item, url:cart_items_path, method: :post, local:true do |f| %>
              <%= f.select :quantity, *[1..5],required:true%>&emsp;
              <%= f.submit "変更" %>
            <% end %>         
          </td>
          <td><%= cart_item.subtotal %></td>
          <td>
            <%= link_to cart_items_path, method: :delete do %>
              <button class="btn btn-danger">削除</button>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <table border="1">
      <tr>
        <td>合計金額</th>
        <td><%= @total %></td>    
      </tr>
    </table>
  </div>


<%= form_with url: items_path, method: :get, local: true do |form| %>
 <%= form.submit '買い物を続ける', class: "btn btn-sm btn-success" %>
<% end %>

<%= form_with url: new_order_path, method: :get, local: true do |form| %>
 <%= form.submit '情報入力に進む', class: "btn btn-sm btn-success" %>
<% end %>


