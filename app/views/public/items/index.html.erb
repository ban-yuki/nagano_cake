<h4>商品一覧</h4><h5>（全　件）</h5>

<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-2">
        <%= image_tag item.image, size: "100x100" %>
        <p>
        <%= link_to item_path(item.id) do %>
          <%= item.name %>
        <% end %>
        </p>
        <p>¥<%= item.price %></p>
      </div>
    <% end %> 
  </div>
</div>
