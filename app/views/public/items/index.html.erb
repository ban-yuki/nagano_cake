<%= render 'layouts/customer_header' %>

<h4>商品一覧</h4>
<strong> 全<%= @items.count %>件 </strong>

<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-2">
        <%= image_tag item.image, size: "100x100" %>
        <p>
        <%= link_to item_path(item.id) do %>
          <%= item.name %>
        <% end %>
        </p>
        <p>¥<%= item.price %></p>
      </div>
    <% end %>
  </div>
</div>
